<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Enter name of course"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required>
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Enter price of course"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Url of image</label>
        <span class="helper-text" data-error="Enter url of image"></span>
    </div>

    <button class="btn">Add course</button>
</form>