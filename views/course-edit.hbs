<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Name of course</label>
        <span class="helper-text" data-error="Enter name of course"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" require value="{{course.price}}">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="Enter price of course"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Url of image</label>
        <span class="helper-text" data-error="Enter url of image"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn" type="submit">Edit course</button>
    <button class="btn">Back to the List</button>
</form>


<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Delete</button>
</form>