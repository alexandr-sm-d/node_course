<div class="auth">
    <div class="row">

        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#signin" class="teal-text">Sign In</a></li>
                <li class="tab col s6"><a class="teal-text" href="#signup">Sign Up</a></li>
            </ul>
        </div>

        <div id="signin" class="col s6 offset-s3">
            <form action="/auth/signin" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" require>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <button class="btn right" type="submit">Sign In</button>
            </form>
        </div>

        <div id="signup" class="col s6 offset-s3">
            <form action="/" method="POST" class="">
                <div class="input-field">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="password" class="validate" require>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="password" class="validate" require>
                    <label for="confirm">Repeat password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <button class="btn right" type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>
