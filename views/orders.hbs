<h1>Orders</h1>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Order â„– {{_id}}</span>
                        <p class="date">{{date}}</p>

                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} (amount: {{count}})
                                </li>
                            {{/each}}
                        </ol>

                        <p><em>{{user.name}}</em> ({{user.userID.email}})</p>
                        <hr>
                        <p>total price: <span class="price">{{totalPrice}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h2>Orders isn't exist</h2>
{{/if}}